<p id="notice"><%= notice %></p>

<h1>Extensions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extensions.each do |extension| %>
      <tr>
        <td><%= link_to extension.name, extension.site %></td>
        <td><%= link_to "Chrome Web Store", extension.url %></td>
        <td><%= link_to 'Show', extension %></td>
        <td><%= link_to 'Edit', edit_extension_path(extension) %></td>
        <td><%= link_to 'Destroy', extension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% extension.updates.each do |update| %>
        <tr>
          <td><%= update.version  %></td>
          <td><%= update.date.strftime("%-m/%-d/%Y")  %></td>
          <td><%= update.reviewed  %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Extension', new_extension_path %>
