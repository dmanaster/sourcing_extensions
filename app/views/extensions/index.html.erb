<div class="container-fluid">
  <div class="row my-3">
    <div class= "col-sm-10" id="new-extension">
      <%= button_to 'Add New Chrome Extension', new_extension_path, :remote => true, :id => 'new-link', :type => "button", :class => "btn btn-primary btn-sourcecon", :method => :get %>
    </div>
    <div class="col-sm-2 text-right">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle btn-sourcecon" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Order by
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= link_to 'Alphabet', alphabet_path, :remote => true, :class => "dropdown-item", :method => :get %>
          <%= link_to 'New Updates', extensions_path, :remote => true, :class => "dropdown-item", :method => :get %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <table id="extensions-table" class="table table-hover">
      <%= render @extensions %>
    </table>
  </div>
</div>